<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight" 
    android:paddingLeft ="5dp"
    android:paddingTop ="5dp"
    android:gravity="center_vertical">
    
    <ImageView
        android:id="@+id/imgFoodImageDetail"
        android:contentDescription="@string/emptyDesc"
        android:background="#000000"
    	android:layout_marginLeft="6dip"
    	android:layout_marginTop="4dip"
		android:padding="1dp"
        android:layout_width="50dip"
        android:layout_height="50dip"/>

    <TextView  
        android:id="@+id/txtNameDetail"
        android:layout_marginTop="4dip"
        android:paddingLeft ="5dp"
        android:layout_height="25dip" 
        android:layout_width="fill_parent"
        android:layout_toRightOf="@id/imgFoodImageDetail"
        
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:singleLine="true"
        android:textStyle="bold"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/txtManufacturerDetail"
        android:paddingLeft ="5dp"
        android:layout_height="15dip" 
        android:layout_width="fill_parent"
        android:layout_toRightOf="@id/imgFoodImageDetail"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/txtNameDetail"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:ellipsize="end"/>

</RelativeLayout>